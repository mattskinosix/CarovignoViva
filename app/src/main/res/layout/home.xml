<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroud"
    android:orientation="vertical"
    android:padding="25dp">

    <ImageButton
        android:id="@+id/castello"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="121dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toStartOf="@+id/mare"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:contentDescription="Bottone monumenti" />

    <ImageButton
        android:id="@+id/mare"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="126dp"
        android:layout_height="112dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/round_button"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/castello"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:contentDescription="Bottone eventi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/monumenti"
        app:layout_constraintEnd_toEndOf="@+id/castello"
        app:layout_constraintStart_toStartOf="@+id/castello"
        app:layout_constraintTop_toTopOf="@+id/castello" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/eventi"
        app:layout_constraintBottom_toBottomOf="@+id/mare"
        app:layout_constraintEnd_toEndOf="@+id/mare"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/mare"
        app:layout_constraintTop_toTopOf="@+id/mare"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/carovignoviva"
        android:textColor="@android:color/holo_red_light"
        android:textSize="45sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/castello"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/tocca_la_citta_che_vuoi_visitare"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>